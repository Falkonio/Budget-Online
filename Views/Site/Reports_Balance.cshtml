            ],
            "addClassNames": true,
            "theme": "light",
            "autoMargins": false,
            "marginLeft": 60,
            "marginRight": 8,
            "marginTop": 10,
            "marginBottom": 26,
            "balloon": {
                "adjustBorderColor": false,
                "horizontalPadding": 10,
                "verticalPadding": 8,
                "color": "#ffffff"
            },

            "dataProvider": @(new HtmlString(ViewBag.Balance_Data)),
            "valueAxes": [{
                "axisAlpha": 0,
                "position": "left"
            }],
            "startDuration": 1,
            "graphs": [{
                "alphaField": "alpha",
                "balloonText": "<span style='font-size:12px;'>[[title]] в [[category]]:<br><span style='font-size:20px;'>[[value]]</span> [[additional]]</span>",
                "fillAlphas": 1,
                "title": "Баланс",
                "type": "column",
                "valueField": "balance",
                "dashLengthField": "dashLengthColumn"
            }, {
                "id": "income",
