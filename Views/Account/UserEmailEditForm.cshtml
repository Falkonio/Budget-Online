<form class="form-inline" role="form" asp-controller="Account" asp-action="UserEmailEdit">
    <div class="form-group">
        <label class="sr-only" for="email">Email</label>
        <input type="email" class="form-control input-sm" id="email" name="email" value="@ViewData["email"]" size="50" required>
    </div>
    <button type="submit" class="btn btn-default btn-sm">Сохранить</button>
</form>