@model Budget.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Вход в личный кабинет";
}
<div class="col-sm-6 col-sm-offset-3 col-xs-12">
    <div class="basic-login">
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="Email" class="col-md-6 control-label">Email</label>
                <div class="col-md-6">
                    <input type="email" id="Email" name="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="col-md-6 control-label">Пароль</label>
                <div class="col-md-6">
                    <input type="password" id="Password" name="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">
                    <button type="submit" class="btn btn-success btn-lg">Войти <span class="glyphicon glyphicon-log-in"></span></button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-warning-sign"></span> Забыли пароль?</a>
                </div>
                <div class="col-md-6" style="text-align:right">
                    <a asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-edit"></span> Регистрация</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
