<form class="form-inline" role="form" asp-controller="Account" asp-action="UserNameEdit">
    <div class="form-group">
        <label class="sr-only" for="name">Имя пользователя</label>
        <input type="text" class="form-control input-sm" id="name" name="name" value="@ViewData["name"]" maxlength="70" size="50" required>
    </div>
    <button type="submit" class="btn btn-default btn-sm">Сохранить</button>
</form>